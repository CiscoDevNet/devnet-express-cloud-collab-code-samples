{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "WebexTeamsBot",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/run_bot.py",
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [],
            "env": {
                "TEAMS_ACCESS_TOKEN": "PASTE YOUR BOT ACCESS TOKEN HERE"
            }
        }
    ]
}