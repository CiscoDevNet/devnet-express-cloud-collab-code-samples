{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SparkBot",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "program": "${workspaceRoot}/run_spark_bot.py",
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [],
            "env": {
                "SPARK_ACCESS_TOKEN": "YOUR_BOT_ACCESS_TOKEN"
            }
        }
    ]
}